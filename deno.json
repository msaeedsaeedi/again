{
  "name": "@msaeedsaeedi/xn",
  "version": "0.1.0",
  "license": "",
  "exports": "./src/main.ts",
  "tasks": {
    "dev": "deno run --allow-run --allow-env src/main.ts",
    "build": "deno compile --allow-run --allow-env --output ./bin/xn src/main.ts",
    "install": "deno install --allow-run --allow-env --name xn src/main.ts"
  },
  "imports": {
    "@clack/prompts": "npm:@clack/prompts@^0.7.0",
    "picocolors": "npm:picocolors@^1.1.1"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "lint": {
    "include": ["src/"],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "include": ["src/"],
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lock": false,
  "nodeModulesDir": "auto",
  "publish": {
    "include": [
      "src/",
      "README.md",
      "LICENSE",
      "CHANGELOG.md",
      "deno.json"
    ],
    "exclude": [
      "bin/",
      "node_modules/",
      ".git/"
    ]
  }
}